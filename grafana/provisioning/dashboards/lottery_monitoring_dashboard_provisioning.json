{
  "id": null,
  "uid": "lottery-monitoring",
  "title": "Lottery Container Monitoring",
  "tags": [
    "lottery",
    "containers"
  ],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "sort": 1,
        "query": "label_values(container_memory_usage_bytes{container_name=~\"lottery_.*\"}, container_name)",
        "definition": "label_values(container_memory_usage_bytes{container_name=~\"lottery_.*\"}, container_name)",
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container_name=~\"$container\"}[5m]) * 100",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 9
      }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container_name=~\"$container\"} / 1024 / 1024",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes"
        },
        "overrides": []
      },
      "gridPos": {
        "x": 0,
        "y": 9,
        "w": 24,
        "h": 9
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "annotations": {
    "list": []
  }
}